<div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class='col-md-3'>
      <%= render 'layouts/userinfo', user: @user %>
      <div class='row'>
        <%= link_to edit_user_path(@user.id), class: 'btn btn-outline-secondary btn-block mt-4' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <%= render 'layouts/newbook', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image, size: "80x80"%>
                <% else %>
                  <%= image_tag 'default-image', size: "80x80" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>