<div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class='col-md-3'>
      <%= render 'layouts/userinfo', user: @user %>
      <div class='row'>
        <%= link_to edit_user_path(@user.id), class: 'btn btn-outline-secondary btn-block mt-4' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <%= render 'layouts/newbook', book: @newbook %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if @user.image.attached? %>
                  <%= image_tag @user.image, size: "80x80"%>
                <% else %>
                  <%= image_tag 'default-image', size: "80x80" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>